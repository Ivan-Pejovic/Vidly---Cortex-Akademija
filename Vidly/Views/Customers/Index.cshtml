@model Vidly.ViewModels.CustomersIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (@Model.CustomerList.Count == 0)
{
    <h1> There are currently no customers in the database </h1>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"> Movies </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.CustomerList)
            {
                <tr class="table-primary">
                    <th> <a class="nav-link text-light" asp-area="" asp-controller="Customers" asp-action="Customer" asp-route-id="@customer.Id"> @customer.FirstName @customer.LastName </a> </th>
                </tr>
            }
        </tbody>
    </table>
}