@model Vidly.ViewModels.MoviesIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if(@Model.MovieList.Count == 0)
{
    <h1> There are currently no movies in the database </h1>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"> Movies </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.MovieList)
            {
                    <tr class="table-primary">
                        <th> <a class="nav-link text-light" asp-area="" asp-controller="Movies" asp-action="Movie" asp-route-id="@movie.Id"> @movie.Name </a> </th>
                    </tr>
            }
        </tbody>
    </table>
}